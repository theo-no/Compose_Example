<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Compose_Example"
        tools:targetApi="31">
        <activity
            android:name=".component.ScaffoldActivity"
            android:exported="true"
            android:label="@string/title_activity_scaffold"
            android:theme="@style/Theme.Compose_Example" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".component.SlotAPIActivity"
            android:exported="true"
            android:label="@string/title_activity_slot_apiactivity"
            android:theme="@style/Theme.Compose_Example">
        </activity>
        <activity
            android:name=".component.TopAppBarActivity"
            android:exported="false"
            android:label="@string/title_activity_top_app_bar"
            android:theme="@style/Theme.Compose_Example"/>

        <activity
            android:name=".component.TextFieldActivity"
            android:exported="true"
            android:label="@string/title_activity_text_field"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.CheckBoxActivity"
            android:exported="true"
            android:label="@string/title_activity_check_box"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.ProfileCardActivity"
            android:exported="true"
            android:label="@string/title_activity_profile_card"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.ImageActivity"
            android:exported="true"
            android:label="@string/title_activity_image"
            android:theme="@style/Theme.Compose_Example">
        </activity>
        <activity
            android:name=".component.ConstraintsActivity"
            android:exported="false"
            android:label="@string/title_activity_constraints"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.ColumnActivity"
            android:exported="false"
            android:label="@string/title_activity_column"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.RowActivity"
            android:exported="false"
            android:label="@string/title_activity_row"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.LayoutActivity"
            android:exported="false"
            android:label="@string/title_activity_layout"
            android:theme="@style/Theme.Compose_Example" />
        <activity
            android:name=".component.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Compose_Example" />
    </application>

</manifest>